<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NodeGraph.Controls">

    <Style TargetType="{x:Type local:GroupNode}">
        <Setter Property="BorderThickness" Value="4"/>
        <Setter Property="BorderBrush" Value="#FF888888"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                <Setter Property="BorderBrush" Value="Aqua"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <ControlTemplate x:Key="__GroupNodeTemplate__" TargetType="{x:Type local:GroupNode}">
        <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
            <StackPanel>
                <Border BorderThickness="0,0,0,1" BorderBrush="Black">
                    <ContentPresenter x:Name="__GroupNodeHeaderContentTemplate__"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch"
                                      ContentTemplate="{Binding HeaderContentTemplate, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type local:GroupNode}}}"/>
                </Border>

                <Canvas Width="{TemplateBinding InnerWidth}" Height="{TemplateBinding InnerHeight}"/>
            </StackPanel>
        </Border>
    </ControlTemplate>

</ResourceDictionary>
