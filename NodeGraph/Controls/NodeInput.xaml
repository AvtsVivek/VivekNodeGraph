<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:res="clr-namespace:NodeGraph.Resources"
                    xmlns:local="clr-namespace:NodeGraph.Controls">

    <ControlTemplate x:Key="__NodeInputContentTemplate__" TargetType="{x:Type local:NodeInputContent}">
        <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
            <DockPanel>
				<Ellipse x:Name="__InputConnector__"
                         Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:NodeInputContent}}}"
                         Width="{x:Static local:ControlSize.ConnectorSize}"
                         Height="{x:Static local:ControlSize.ConnectorSize}"
                         StrokeThickness="{TemplateBinding StrokeThickness}"
                         Stroke="{TemplateBinding Stroke}"
                         Fill="{TemplateBinding Fill}"/>
                <ContentPresenter Margin="4,0,0,0" VerticalAlignment="Center">
                    <ContentPresenter.Content>
                        <Path Fill="{TemplateBinding Fill}"
                              Stroke="{TemplateBinding Stroke}"
                              StrokeThickness="{TemplateBinding StrokeThickness}"
                              Data="M 0,0 L 5,4.5 L 0,9 Z"/>
                    </ContentPresenter.Content>
                </ContentPresenter>
                <Label Content="{TemplateBinding Content}" Foreground="WhiteSmoke" VerticalContentAlignment="Center"/>
            </DockPanel>
        </Border>
    </ControlTemplate>

    <Style TargetType="{x:Type local:NodeInput}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NodeInput}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Canvas>
                            <Canvas x:Name="__NodeInputCanvas__"/>
                        </Canvas>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>